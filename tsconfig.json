{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@layer/crossCutting/*": [
        "./src/crossCutting.layer/*"
      ],
      "@layer/domain/*": [
        "./src/domain.layer/*"
      ],
      "@layer/application/*": [
        "./src/application.layer/*"
      ],
      "@layer/adapters/*": [
        "./src/adapters.layer/*"
      ],
      "@layer/main/*": [
        "src/main.layer/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "documentation"
  ]
}